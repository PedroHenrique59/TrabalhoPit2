<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cor_recycler"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNumeroProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="8sp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProdutoIcone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/ic_produto_alerta_24" />

        <TextView
            android:id="@+id/textViewNomeProdutoAdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/nomeproduto"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonExcluirProduto"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:drawableRight="@drawable/ic_deletar_24"
            android:drawableTint="@android:color/black"
            android:text="Excluir"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/buttonEditarProduto"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:drawableRight="@drawable/ic_editar"
            android:drawableTint="@android:color/black"
            android:text="Editar"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>