<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cor_recycler"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAlertaIcone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/ic_adicionar_alerta_48dp" />

        <TextView
            android:id="@+id/textViewNomeAlerta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5dp"
            android:text="@string/nomealerta"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPadaria"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/ic_padaria_loja_24" />

        <TextView
            android:id="@+id/textViewNomePadaria"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nomepadaria"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProduto"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/ic_produto_alerta_24" />

        <TextView
            android:id="@+id/textViewNomeProduto"
            android:layout_marginTop="7sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/nomeproduto"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonExcluirAlerta"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Excluir"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:drawableRight="@drawable/ic_deletar_24"
            android:drawableTint="@android:color/black"
            android:layout_marginLeft="25dp" />

        <Button
            android:id="@+id/buttonEditarAlerta"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Editar"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:drawableRight="@drawable/ic_editar_alertas"
            android:drawableTint="@android:color/black"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

</LinearLayout>